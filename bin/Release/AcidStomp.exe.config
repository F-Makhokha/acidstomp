<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="LISTEN_PORT" value="15795"/>
    <add key="LISTEN_BACKLOG" value="100"/>
    <add key="MAX_CLIENTS" value="8192"/>
    
    <!-- LOG_LEVEL: -1 = NONE, 0 = INFO/EXCEPTION, 1 = WARNING, 2 = DEBUG -->
    <add key="LOG_LEVEL" value="2"/>
    
    <add key="MINIMUM_CLIENT_BUFFER_SIZE" value="1024"/>
    <add key="MAXIMUM_CLIENT_BUFFER_SIZE" value="16384"/>    
    <add key="FORCE_OVERLAPPED_IO" value="false"/>
    
    <!-- LOG_FILE: comment out to disable -->
    <add key="LOG_FILE" value="acidstomp.log"/>
    
    <!-- LOG_FILE_FLUSH_INTERVAL: time in seconds between log file flush -->
    <add key="LOG_FILE_FLUSH_INTERVAL" value="10"/>

    <!-- LOG_STATISTICS_INTERVAL: time in seconds between printing of statistics. -1 disables. -->
    <add key="LOG_STATISTICS_INTERVAL" value="10"/>
  </appSettings>
</configuration>